<div class="min-h-screen bg-gray-50 py-6">
    <div class="max-w-3xl mx-auto sm:px-6 lg:px-8">
        <div class="bg-white shadow sm:rounded-lg">
            <div class="px-4 py-5 sm:p-6">
                <h2 class="text-2xl font-bold text-gray-900">Ban/Unban User</h2>
                <form action="/staff/ban" method="POST" class="mt-4">
                    <label for="discordId" class="block text-sm font-medium text-gray-700">Discord ID</label>
                    <input type="text" name="discordId" id="discordId" required
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-discord focus:ring-discord sm:text-sm">
                    <button type="submit"
                        class="mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700">
                        Ban User
                    </button>
                </form>

                <form action="/staff/unban" method="POST" class="mt-6">
                    <label for="discordId" class="block text-sm font-medium text-gray-700">Discord ID</label>
                    <input type="text" name="discordId" id="discordId" required
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-discord focus:ring-discord sm:text-sm">
                    <button type="submit"
                        class="mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700">
                        Unban User
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>