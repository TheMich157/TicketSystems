<div class="min-h-screen bg-gray-50 py-6">
    <div class="max-w-3xl mx-auto sm:px-6 lg:px-8">
        <div class="bg-white shadow sm:rounded-lg">
            <div class="px-4 py-5 sm:p-6">
                <h2 class="text-2xl font-bold text-gray-900">Select a Server</h2>
                <p class="mt-4 text-gray-600">
                    Please select a server to continue.
                </p>
                <form action="/auth/select-server" method="POST" class="mt-6 space-y-4">
                    <div>
                        <label for="serverId" class="block text-sm font-medium text-gray-700">Server</label>
                        <select name="serverId" id="serverId" required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-discord focus:ring-discord sm:text-sm">
                            <% servers.forEach(server => { %>
                                <option value="<%= server._id %>"><%= server.name %></option>
                            <% }); %>
                        </select>
                    </div>
                    <button type="submit"
                        class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-discord hover:bg-discord-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-discord">
                        Select Server
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>