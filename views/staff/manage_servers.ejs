<div class="min-h-screen bg-gray-50 py-6">
    <div class="max-w-3xl mx-auto sm:px-6 lg:px-8">
        <div class="bg-white shadow sm:rounded-lg">
            <div class="px-4 py-5 sm:p-6">
                <h2 class="text-2xl font-bold text-gray-900">Manage Servers</h2>
                <form action="/admin/add-server" method="POST" class="mt-4 space-y-4">
                    <div>
                        <label for="serverId" class="block text-sm font-medium text-gray-700">Server ID</label>
                        <input type="text" name="serverId" id="serverId" required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-discord focus:ring-discord sm:text-sm">
                    </div>
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700">Server Name</label>
                        <input type="text" name="name" id="name" required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-discord focus:ring-discord sm:text-sm">
                    </div>
                    <div>
                        <label for="ownerId" class="block text-sm font-medium text-gray-700">Owner ID</label>
                        <input type="text" name="ownerId" id="ownerId" required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-discord focus:ring-discord sm:text-sm">
                    </div>
                    <div>
                        <label for="staffRoles" class="block text-sm font-medium text-gray-700">Staff Roles</label>
                        <input type="text" name="staffRoles" id="staffRoles" required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-discord focus:ring-discord sm:text-sm">
                        <p class="mt-2 text-sm text-gray-500">Comma-separated list of staff role IDs.</p>
                    </div>
                    <button type="submit"
                        class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-discord hover:bg-discord-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-discord">
                        Add Server
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>