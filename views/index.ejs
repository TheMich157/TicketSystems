<!-- Hero Section -->
<div class="relative bg-gray-50 overflow-hidden">
    <div class="max-w-7xl mx-auto">
        <div class="relative z-10 pb-8 bg-gray-50 sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-28 xl:pb-32">
            <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
                <div class="sm:text-center lg:text-left">
                  
                    <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
                        <span class="block">Welcome to the</span>
                        <span class="block text-discord">Support Ticket System</span>
                    </h1>
                    <p class="mt-3 text-base text-gray-600 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
                        Get help quickly and efficiently with our Discord-integrated support ticket system. Track your issues, communicate with support staff, and get solutions faster.
                    </p>
                    <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
                        <% if (!locals.isAuthenticated) { %>
                            <div class="rounded-md shadow">
                                <a href="/auth/discord" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-discord hover:bg-discord-dark md:py-4 md:text-lg md:px-10">
                                    Login with Discord
                                </a>
                            </div>
                        <% } else { %>
                            <div class="rounded-md shadow">
                                <a href="/dashboard" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-discord hover:bg-discord-dark md:py-4 md:text-lg md:px-10">
                                    Go to Dashboard
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
        <img class="h-56 w-full object-cover sm:h-72 md:h-96 lg:w-full lg:h-full fade-in" 
             src="/images/ticket.png"
             alt="Support Team">
    </div>
</div>

<!-- Features Section -->
<div class="py-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="lg:text-center">
            <h2 class="text-base text-discord-dark font-semibold tracking-wide uppercase">Features</h2>
            <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl">
                Everything you need for support
            </p>
        </div>

        <div class="mt-10">
            <div class="space-y-10 md:space-y-0 md:grid md:grid-cols-3 md:gap-x-8 md:gap-y-10">
                <!-- Feature 1 -->
                <div class="relative">
                    <div class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-discord-dark text-white">
                        <i class="fas fa-ticket-alt text-xl"></i>
                    </div>
                    <p class="ml-16 text-lg leading-6 font-medium text-gray-900">Easy Ticket Creation</p>
                    <p class="mt-2 ml-16 text-base text-gray-500">
                        Create and manage support tickets quickly with our intuitive interface.
                    </p>
                </div>

                <!-- Feature 2 -->
                <div class="relative">
                    <div class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-discord-dark text-white">
                        <i class="fab fa-discord text-xl"></i>
                    </div>
                    <p class="ml-16 text-lg leading-6 font-medium text-gray-900">Discord Integration</p>
                    <p class="mt-2 ml-16 text-base text-gray-500">
                        Seamlessly login and manage tickets with your Discord account.
                    </p>
                </div>

                <!-- Feature 3 -->
                <div class="relative">
                    <div class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-discord-dark text-white">
                        <i class="fas fa-users text-xl"></i>
                    </div>
                    <p class="ml-16 text-lg leading-6 font-medium text-gray-900">Role-Based Access</p>
                    <p class="mt-2 ml-16 text-base text-gray-500">
                        Secure access control with user and staff roles for better management.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CTA Section -->
<div class="bg-discord-dark">
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:py-16 lg:px-8 flex flex-col items-center">
        <h2 class="text-3xl font-extrabold tracking-tight text-white sm:text-4xl text-center">
            <span class="block">Ready to get started?</span>
            <span class="block text-gray-300">Create your first support ticket today.</span>
        </h2>
        <div class="mt-8 flex flex-col sm:flex-row sm:space-x-4 justify-center items-center">
            <% if (!locals.isAuthenticated) { %>
                <div class="inline-flex rounded-md shadow">
                    <a href="/auth/discord" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-discord-dark bg-white hover:bg-gray-50">
                        Login with Discord
                    </a>
                </div>
            <% } else { %>
                <div class="inline-flex rounded-md shadow">
                    <a href="/ticket/new" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-discord-dark bg-white hover:bg-gray-50">
                        Create Ticket
                    </a>
                </div>
            <% } %>
        </div>
        <div class="mt-6 flex space-x-4 justify-center items-center">
            <a href="/tos" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-discord-dark bg-white hover:bg-gray-50">
                Terms of Service
            </a>
            <a href="/privacy" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-discord-dark bg-white hover:bg-gray-50">
                Privacy Policy
            </a>
        </div>
        <!-- Status Page Button -->
        <div class="mt-6 flex justify-center">
            <a href="https://status.aigenres.xyz/" target="_blank"
               class="inline-flex items-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                <i class="fas fa-info-circle mr-2"></i> View System Status
            </a>
        </div>
    </div>
</div>

